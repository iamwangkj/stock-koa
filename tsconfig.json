{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "outDir": "dist",
    "strict": true,
    "removeComments": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "sourceMap": false,
    "baseUrl": "./"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./build/",
    "node_modules"
  ]
}